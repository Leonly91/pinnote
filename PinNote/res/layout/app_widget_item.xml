<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingLeft="10dp"
    android:id="@+id/app_widget_item_layout"
    android:orientation="horizontal" >
    
    <ImageView android:id="@+id/app_widget_imgIcon"
	         android:layout_width="30dp"
	         android:layout_height="30dp"
	         android:paddingLeft="30dp"
	         android:layout_alignParentLeft="true"
	         />
    
    <TextView android:id="@+id/app_widget_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_toRightOf="@id/app_widget_imgIcon"
        android:paddingLeft="3dp"
        android:text="Test" />
    
    <TextView android:id="@+id/app_widget_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="time"/>

</RelativeLayout>
